@page "/quiz"

@if (quizStarted == false) 
{ 
    <QuizStart OnStart="Start">
    </QuizStart>
}
else
{
    <QuizOngoing OnStop="Stop">
    </QuizOngoing>
}

@code {
    private bool quizStarted = false;

    public void Start()
    {
        this.quizStarted = true;
    }

    public void Stop()
    {
        this.quizStarted = false;
    }
}
